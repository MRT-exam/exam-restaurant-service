type Query {
    restaurants: [Restaurant]
    menuItemsByRestaurantId(restaurantId: ID!): [MenuItem]
}

type Restaurant {
    id: ID!
    name: String!
    email: String!
}

type MenuItem {
    id: ID!
    name: String!
    description: String!
    price: Float!
}


